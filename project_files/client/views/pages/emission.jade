extends layout

block content
   div(ng-controller="emmCtrl as em")
      // Forma pentru introducerea unei noi emisiuni
      div(class='modal fade', id='emModal', tabindex='-1', role='dialog', aria-labelledby='emModalLabel')
         div(class='modal-dialog', role='document')
            div(class='modal-content')
               form(method='POST', action='/emisiuni/add')
                  div(class='modal-header')
                     button(type='button', class='close', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') &times;
                     h4(class='modal-title', id='emModalLabel') Adauga emisiunie
                  div(class='modal-body')
                     div(class='row')
                        div(class='col-sm-10 col-sm-offset-1')
                              div(class='form-group')
                                 input(type='text', placeholder='Nume', name='name', class='form-control', ng-model='em.emName')
                              div(class='form-group')
                                 select(class='form-control', name='type', ng-model='em.emType')
                                    option(ng-repeat='emType in em.emTypes', value="{{emType.name}}") {{emType.name}}
                              div(class='form-group')
                                 input(type='text', placeholder='Nume', name='fullName', class='form-control', disabled=true, value='{{em.fullTitle()}}')
                              div(class='form-group')
                                 input(type='text', placeholder='Durata totala', name='fullName', class='form-control', disabled=true)
                              div(class='form-group')
                  div(class='modal-footer')
                     button(type='button', class='btn btn-default', data-dismiss='modal') Inchide
                     input(type="submit", value="Adauga", class="btn btn-primary")
      // End Forma

      h2 Emisiuni
         button(type='button', class='btn btn-success', data-toggle='modal', data-target='#emModal')
            span(class='fa fa-pencil-square-o') Adauga

      h4(ng-hide="em.emCount") Nu exista nici o emisiune

      table(class="table table-striped table-bordered table-center" ng-show="em.emCount")
         thead
            tr
               td Program
               td Genul
               td Produs
               td Limba
               td Foramt
         tbody
            tr(ng-repeat="emisiune in em.emisiuni")
               td {{ emisiune.type.charAt(0).toUpperCase()+emisiune.type.substr(1) + ": " + emisiune.name }}
               td {{ emisiune.type }}
               td {{}}
               td RO
               td {{}}